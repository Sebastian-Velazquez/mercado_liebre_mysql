        <form action="/user/register" method="POST"  enctype="multipart/form-data" class="content-form">
            <h1>Registrarse</h1>
            <!-- Nombre> -->
            <h2>Nombre y apellido</h2>
            <input type="text" placeholder="Ingrese nombre" name="firstName" class="main-form__imput is-invalid"
                value="<%= locals.oldData ? oldData.firstName : null %>"><!-- Para dejar el lo que pusiste bien en el input -->
                <!-- Validacion de registro -->
                <% if (locals.errors && errors.firstName){ %>
                <p class="alertError"><%= errors.firstName.msg %> </p>
                <% } %>
            <!-- Apellido -->
            <input type="text" placeholder="Ingrese apellido" name="lastName" class="main-form__imput"
                value="<%= locals.oldData ? oldData.lastName : null %>">
                <!-- validacion de apellido -->
                <% if (locals.errors && errors.lastName){ %>
                    <p class="alertError"><%= errors.lastName.msg %> </p>
                <% } %>
            <!-- <h2>Fecha de nacimiento</h2>
            <input type="date" name="fechaDeNacimiento" class="main-form__imput">
            <input type="text" placeholder="Domicilio" name="domicilio" class="main-form__imput"> -->
            <h2>Email</h2>
                <input type="email" placeholder="Ingrese su email" name="email" class="main-form__imput"
                value="<%= locals.oldData ? oldData.email : null %>">
                <!-- Validacion de Email -->
                <% if (locals.errors && errors.email){ %>
                    <p class="alertError"><%= errors.email.msg %> </p>
                <% } %>
            <!-- <h2>Intereses</h2>
